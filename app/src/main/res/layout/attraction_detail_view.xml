<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detailed_attraction_view_background"
    android:orientation="vertical">

    <!-- Full resolution image of the attraction in an ImageView -->
    <ImageView
        android:id="@+id/attraction_detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        tools:src="@drawable/sample"/>

    <!-- CardView to display the description of the attraction -->
    <android.support.v7.widget.CardView
        android:id="@+id/detailed_description_card_widget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        card_view:cardElevation="@dimen/vertical_margin"
        card_view:cardMaxElevation="@dimen/vertical_margin"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Detailed description of the attraction in a TextView -->
            <TextView
                android:id="@+id/attraction_detail_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:textColor="@android:color/black"
                android:textSize="@dimen/detailed_text"
                android:typeface="serif"
                tools:text="Detailed Description about the attraction in a card"/>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <!-- Button to show the attraction on a Map -->
    <Button
        android:id="@+id/attraction_detail_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="showOnMap"
        android:layout_marginRight="8dp"
        android:text="@string/show_map"/>

</LinearLayout>